    <material>
      <ambient>0.7 0.7 0.7 1</ambient>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>1 1 1 1</specular>
    </material>
  </gazebo>

  <gazebo reference="handle_link">
    <mu1>1.5</mu1><mu2>1.5</mu2>
    <material>
      <ambient>1.0 0.8 0.0 1</ambient>
      <diffuse>1.0 0.8 0.0 1</diffuse>
    </material>
